<form action="/songs/:slug" method="POST">
<input id="hidden" type="hidden" name="_method" value="PATCH">
  Song name: <input type="text" name="song[name]" id="Name" value="<%= @song.name %>">
  Artist name: <input type="text" name ="song[artist.name]" id="Artist Name" value="<%= @song.artist.name %>">
  <p>Genres</p>
    <% @genres.each do |genre|%>
    <input type="checkbox" name="song[genres][]" id="<%=genre.name%>" value="<%=genre.id%>" <% if @song.genres.ids.include?(genre.id) %>checked<%end%>>
    <label for "<%=genre.id%>"><%=genre.name%></label>
    <% end %>
  <input type="submit" value="submit" id ="Save">
</form>