<form method="post" action="/songs">
  <input type="hidden" name="_method" value="patch" />
  <label for="Name">Song Name</label>
  <input type="text" id="Name" name="song[name]" value="<%=@song.name%>">
  <label for="Artist Name">Artist Name</label>
  <input type="text" id="Artist Name" name="song[artist]"
    value = "<%= @song.artist.name%>">
    <input type="hidden" name="song[id]" value="<%= @song.id %>">

    <% @genres.each do |genre|%>

        <label for="<%= genre.name %>"><%= genre.name %></label>
        <input type="checkbox" id="<%= genre.name %>" name="genres[]" value="<%= genre.id %>">



    <% end %>



  <input type="submit" value="Save">
</form>
