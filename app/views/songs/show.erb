<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%= @song.name %></h1>

<p>Song artist: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></p>

<% @song.genres.map do |genre|%>
  <p>Song genre: <a href="/genres/<%= genre.slug %>"><%= genre.name %></a></p>
<% end %>

<a href="/songs/<%= @song.slug %>/edit">Edit song</a>
